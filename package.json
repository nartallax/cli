{
  "name": "@nartallax/cli",
  "version": "1.0.0",
  "description": "A library for creating command-line interface for NodeJS applications",
  "author": "Nartallax",
  "license": "0BSD",
  "types": "cli.d.ts",
  "main": "cli.js",
  "type": "module",
  "scripts": {
    "typecheck": "cd src && npx tsc --noEmit && cd - > /dev/null",
    "build": "npm run typecheck && npm run build:prepare && npm run build:build && npm run dts && npm run build:copy_static",
    "build:prepare": "rm -rf ./target && rm -rf ./dist && mkdir ./target",
    "build:build": "npx parcel build --target release --no-cache && cp ./dist/main.js ./target/cli.js",
    "build:copy_static": "cp ./LICENSE ./target/ && cp ./README.md ./target && npm run build:cut_package",
    "build:cut_package": "npx package-cutter --output ./target/package.json",
    "dts": "npm run dts:generate && npm run dts:cleanup",
    "dts:generate": "npx parcel build --target types --no-cache",
    "dts:cleanup": "mv ./cli.d.ts ./target/cli.d.ts",
    "pub": "npm run build && npm run pub:publish",
    "pub:publish": "cd target && npm publish --access public"
  },
  "devDependencies": {
    "@nartallax/package-cutter": "^1.0.2",
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/plugin": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@types/node": "^20.12.8",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "parcel": "^2.12.0",
    "parcel-resolver-ts-base-url": "^1.3.1",
    "typescript": "^5.4.5"
  },
  "targets": {
    "release": {
      "source": "src/main.ts",
      "context": "node",
      "isLibrary": true,
      "optimize": true,
      "outputFormat": "esmodule"
    },
    "types": {
      "source": "src/main.ts",
      "sourceMap": false
    }
  }
}
